{
  "extends": "next/core-web-vitals",
  "rules": {
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "../"
        ]
      }
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}